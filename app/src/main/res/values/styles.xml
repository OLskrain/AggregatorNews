<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDefault</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDefault</item>
        <item name="colorAccent">@color/colorAccentDefault</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--Text title style 18sp-->
    <style name="textTitleDefaultStyle" parent="android:TextAppearance">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_18sp</item>
    </style>

    <style name="textTitleBlackStyle" parent="android:TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_18sp</item>
    </style>

    <style name="textTitlePurpleStyle" parent="android:TextAppearance">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_18sp</item>
    </style>

    <!--Text style 14sp-->
    <style name="textDefaultStyle" parent="android:TextAppearance">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <style name="textBlackStyle" parent="android:TextAppearance">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <style name="textPurpleStyle" parent="android:TextAppearance">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <!--Text subtitle style 12sp-->
    <style name="textSubtitleDefaultStyle" parent="android:TextAppearance">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <style name="textSubtitleBlackStyle" parent="android:TextAppearance">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <style name="textSubtitlePurpleStyle" parent="android:TextAppearance">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <!--Color radiobutton-->
    <style name="radioButtonWhiteStyle" parent="android:Widget.Material.CompoundButton.RadioButton">
        <item name="colorControlNormal">@color/colorWhite</item>
    </style>

    <style name="radioButtonBlackStyle" parent="android:Widget.Material.CompoundButton.RadioButton">
        <item name="colorControlNormal">@color/colorBlack</item>
    </style>

    <!--Стиль для диалога-->
    <style name="alertDialogDefaultStyle">
        <item name="android:windowBackground">@color/colorPrimaryLightDefault</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="android:textColorAlertDialogListItem">@color/colorBlack</item>
    </style>

    <style name="alertDialogBlackStyle">
        <item name="android:windowBackground">@color/colorPrimaryLightBlack</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textColorAlertDialogListItem">@color/colorWhite</item>
    </style>

    <style name="alertDialogPurpleStyle">
        <item name="android:windowBackground">@color/colorPrimaryLightPurple</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="android:textColorAlertDialogListItem">@color/colorBlack</item>
    </style>
</resources>
